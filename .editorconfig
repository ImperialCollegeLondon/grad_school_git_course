root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80  # Please keep this in sync with bin/lesson_check.py!

[*.md]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.sh]
end_of_line = lf

[Makefile]
indent_style = tab
